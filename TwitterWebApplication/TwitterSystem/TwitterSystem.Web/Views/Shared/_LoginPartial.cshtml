@using TwitterSystem.Web.Infrastructure.Helpers
<ul class="nav navbar-nav navbar-right">
    @if (Request.IsAuthenticated)
    {
        <li>
            <a href="@Url.Action("Index", "Notifications")">
                Notifications (<span id='notifications-count'>@Html.Action("NotificationsCount", "Notifications")</span>)
            </a>
        </li>

        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" >@User.GetUsername()
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
                <li>
                    @Html.ActionLink("Profile", "Profile", "User", new { username = User.GetUsername() }, null)
                </li>
                <li>
                    @Html.ActionLink("Change Password", "ChangePassword", "Manage")
                </li>
                <li>
                    <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                    }
                </li>
            </ul>
        </li>
    }
    else
    {
        <li>@Html.ActionLink("Register", "Register", "Account", null, new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", null, new { id = "loginLink" })</li>
    }
</ul>
